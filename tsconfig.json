{
	"compilerOptions": {
		"strict": true,
		"module": "ES2022",
		"target": "ES2020",
		"lib": ["ES2023", "ESNext.Object"],
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "ags/gtk4",
		"baseUrl": ".",
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "@girs/**/*.ts"],
	"exclude": ["node_modules/**", "vendor/**"]
}
